  <body>
    <div class="container mt-3">
      <div class="jumbotron">
          
        <h1>Formulario de Productos</h1>

        <form id="formAddProduct">
          <div class="form-group">
            <label for="nombre">Titulo</label>
            <input
              id="title"
              class="form-control"
              type="text"
              name="title"
              required
            />
          </div>

          <div class="form-group">
            <label for="precio">Precio</label>
            <input
              id="price"
              class="form-control"
              type="number"
              step="0.01"
              name="price"
              required
            />
          </div>

          <div class="form-group">
            <label for="foto">Imagen</label>
            <input id="image" class="form-control" type="url" name="image" />
          </div>

          <button class="btn btn-primary mt-3">Guardar</button>
        </form>
        <div id="products" class="mt-3"></div>
      </div>

      <div class="jumbotron">
        <h1>Centro de Mensajes</h1>

        <input
          type="text"
          id="inputAddEmail"
          class="form-control w-50 my-2 mr-2"
          placeholder="Ingresa email"
        />
        <input
          type="text"
          id="inputAddName"
          class="form-control w-50 my-2 mr-2"
          placeholder="Ingresa Nombre"
        />
        <input
          type="text"
          id="inputAddSurname"
          class="form-control w-50 my-2 mr-2"
          placeholder="Ingresa Apellido"
        />
        <input
          type="text"
          id="inputAddAge"
          class="form-control w-50 my-2 mr-2"
          placeholder="Ingresa Edad"
        />
        <input
          type="text"
          id="inputAddAlias"
          class="form-control w-50 my-2 mr-2"
          placeholder="Ingresa Alias"
        />
        <input
          type="text"
          id="inputAddAvatar"
          class="form-control w-50 my-2 mr-2"
          placeholder="Ingresa Avatar"
        />

        <hr />

        <div id="messages"></div>

        <form id="formMessage" class="form-inline" autocomplete="off">
          <div class="form-group">
            <input
              disabled
              id="inputMessage"
              type="text"
              class="form-control my-2 mr-2"
              placeholder="Ingresa mensaje..."
            />
            <button
              disabled
              id="btnSend"
              type="submit"
              class="btn btn-primary my-2"
            >
              Enviar
            </button>
          </div>
        </form>
      </div>
    </div>

    <script src="js/main.js"></script>
  </body>
</html>
